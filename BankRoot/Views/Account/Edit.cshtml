@model BankRoot.Models.Account

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_account" />
            <div class="form-group">
                <label asp-for="account_number" class="control-label"></label>
                <input asp-for="account_number" class="form-control" />
                <span asp-validation-for="account_number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="amount" class="control-label"></label>
                <input asp-for="amount" class="form-control" />
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="account_status" class="control-label"></label>
                <input asp-for="account_status" class="form-control" />
                <span asp-validation-for="account_status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_app_user" class="control-label"></label>
                <select asp-for="Id_app_user" class="form-control" asp-items="ViewBag.Id_app_user"></select>
                <span asp-validation-for="Id_app_user" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
