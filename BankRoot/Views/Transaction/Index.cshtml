@model IEnumerable<BankRoot.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date_transaction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountD.Id_account)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountC.Id_account)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_transaction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_transaction">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_transaction">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_transaction">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
